#EJercicio 1
nombre=input("Hola ingresa tu nombre:")
numero=int(input("Ingrese un numero:"))

if numero> 0:
    print(f"{nombre},el numero es positivo.")
elif numero < 0:
    print(f"{nombre},el numero es negativo")
else:
    print(f"{nombre},el numero es Cero")

 


#Ejercicio 2
