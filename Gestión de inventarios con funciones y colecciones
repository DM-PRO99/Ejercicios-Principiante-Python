#Funcion
Inventory=()

#Program Features
#Function to add products.

def add_product(name, price, quantity):
    if name in Inventory:
        print(f"The Product {name} already exists in inventory.")
    else:
        Inventory[name] = {"price":price, "quantity": quantity}
        print(f"Product {name} add to inventory")

#Function To view a product

def consult_product(name):
    product= Inventory.get(name)
    if product:
       print(f"Product: {name}, prize:{product["Prize"]}, quantity: {product["quantity"]}")
    else:
        print(f"The product {name} It is not in the inventory.")


#Function to update the price

def update_price(name,newprice):
    product= Inventory.get(name)
    if product:
        product["Price"] = newprice
        print(f"The product price is {name} update to {newprice}")
    else:
        print(f"The product {name} It is not in the inventory.")
    
#Function to delete product

def delete_product(name):
    if name in Inventory:
        del Inventory[name]
        print(f"The product {name} has been erased from the inventory.")
    else:
        print(f"The product {name} It is not in the inventory.")

#Function to calculate the inventory.
def calculate_inventory():
    totalvalue= sum(map(lambda p: p["Price"] *p["quantity"], Inventory.values()))
    print(F"Total Inventory Value {totalvalue}")

#Function to display the options menu.
def showmenu():
    print("Hello Welcome")
    print("\n--- Inventory Menu---")
    print("1. Add Product")
    print("2. consult product")
    print("3. Update price")
    print("4. Delete Price")
    print("5. Calculate Total Value")
    print("6. Exit")



#Main function to run the program
def Runprogram():
    while True:
        showmenu()
        option= input("Select an option:")
        if option ==  "1":
            name=input("Name the prouct:")
            try:
                price=input("Price the product:")
                quantity= int(input("available quantity:"))
                add_product(name, price, quantity)
            except ValueError:
                print("Please enter valid values for price and quantity.")
        elif option == "2":
            name = input("Name of the product to be consulted: ")
            consult_product(name)
        elif option == "3":
            name =input("Name of the product to update: ")
            try:
                newprice = float(input("Nuevo precio:"))
                update_price(name, newprice)
            except ValueError:
                print("Please enter a valid value for the price.")    
        elif option == "4":
            name = input("Name of the product to be deleted: ")
            delete_product(name)
        elif option == "5":  
            calculate_inventory()
        elif option =="6":
            print("Thank you for using the inventory system.")
            break
        else:
            print("Invalid option. Please try again.")
         
        
#Run Program
if __name__== "__main__":
    Runprogram()
