# Diccionario para almacenar el inventario
Inventory = {}

# Función para agregar un producto
def add_product(name, price, quantity):
    if name in Inventory:
        print(f"El producto '{name}' ya existe en el inventario.")
    else:
        Inventory[name] = {"price": price, "quantity": quantity}
        print(f"Producto '{name}' agregado al inventario.")

# Función para consultar un producto
def consult_product(name):
    product = Inventory.get(name)
    if product:
        print(f"Producto: {name}, precio: {product['price']}, cantidad: {product['quantity']}")
    else:
        print(f"El producto '{name}' no está en el inventario.")

# Función para actualizar el precio de un producto
def update_price(name, new_price):
    product = Inventory.get(name)
    if product:
        product["price"] = new_price
        print(f"Precio del producto '{name}' actualizado a {new_price}.")
    else:
        print(f"El producto '{name}' no está en el inventario.")

# Función para eliminar un producto
def delete_product(name):
    if name in Inventory:
        del Inventory[name]
        print(f"El producto '{name}' ha sido eliminado del inventario.")
    else:
        print(f"El producto '{name}' no está en el inventario.")

# Función para calcular el valor total del inventario
def calculate_inventory():
    total_value = sum(p["price"] * p["quantity"] for p in Inventory.values())
    print(f"Valor total del inventario: {total_value}")

# Función para mostrar el menú
def show_menu():
    print("\n--- Menú de Inventario ---")
    print("1. Agregar producto")
    print("2. Consultar producto")
    print("3. Actualizar precio")
    print("4. Eliminar producto")
    print("5. Calcular valor total del inventario")
    print("6. Salir")

# Función principal para ejecutar el programa
def run_program():
    while True:
        show_menu()
        option = input("Selecciona una opción: ")
        if option == "1":
            name = input("Nombre del producto: ")
            try:
                price = float(input("Precio del producto: "))
                quantity = int(input("Cantidad disponible: "))
                add_product(name, price, quantity)
            except ValueError:
                print("Por favor, ingresa valores válidos para precio y cantidad.")
        elif option == "2":
            name = input("Nombre del producto a consultar: ")
            consult_product(name)
        elif option == "3":
            name = input("Nombre del producto a actualizar: ")
            try:
                new_price = float(input("Nuevo precio: "))
                update_price(name, new_price)
            except ValueError:
                print("Por favor, ingresa un precio válido.")
        elif option == "4":
            name = input("Nombre del producto a eliminar: ")
            delete_product(name)
        elif option == "5":
            calculate_inventory()
        elif option == "6":
            print("Gracias por usar el sistema de inventario.")
            break
        else:
            print("Opción inválida. Intenta nuevamente.")

# Ejecutar el programa
if __name__ == "__main__":
    run_program()
